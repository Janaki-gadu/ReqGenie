import React from 'react';
import { Badge } from "@/components/ui/badge";
import { Bot, CheckCircle, FileText } from "lucide-react";

export default function AgentStatus({ activeAgent }) {
  const agents = {
    collector: {
      name: "Collector AI",
      icon: Bot,
      color: "bg-blue-100 text-blue-800",
      description: "Gathering requirements"
    },
    validator: {
      name: "Validator AI", 
      icon: CheckCircle,
      color: "bg-green-100 text-green-800",
      description: "Validating & aligning"
    },
    documenter: {
      name: "Documenter AI",
      icon: FileText, 
      color: "bg-purple-100 text-purple-800",
      description: "Structuring documents"
    }
  };

  const currentAgent = agents[activeAgent] || agents.collector;
  const Icon = currentAgent.icon;

  return (
    <Badge className={`${currentAgent.color} border flex items-center gap-2 px-3 py-1`}>
      <Icon className="w-4 h-4" />
      <span className="font-medium">{currentAgent.name}</span>
      <div className="w-2 h-2 bg-current rounded-full animate-pulse"></div>
    </Badge>
  );
}
